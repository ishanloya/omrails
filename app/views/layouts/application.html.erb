<!DOCTYPE html>
<html>
  <head>
    <title>Civic Response Team</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css", media: 'all' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
  	<nav class="navbar navbar-full navbar-dark bg-primary">
  		<button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#exCollapsingNavbar2" aria-controls="exCollapsingNavbar2" aria-expanded="false" aria-label="Toggle navigation">
        &#9776;
      </button>
      <div class="collapse navbar-toggleable-xs" id="exCollapsingNavbar2">
        <a class="navbar-brand" href="/"><strong>CRT^</strong></a>
    		<ul class="nav navbar-nav">
          <%= nav_link "Home", root_path %>
          <%= nav_link "About", about_path %>
          <%= nav_link "Services", services_path %>
          <%= nav_link "Wards", wards_path %>
          <%= nav_link "Items", items_path %>
          <%= nav_link "Contact", contact_path %>
      		<% if user_signed_in? %>
            <li class="nav-item pull-xs-right">
              <%= link_to "Logout", signout_path, method: :delete, class: "nav-link" %>
            </li>
              <%= nav_link_right current_user.first_name, user_path(current_user.username) %>
          <% else %>
            <li class="nav-item pull-xs-right">
              <%= link_to "Sign up", signup_path, class: "btn btn-success" %>
            </li>
              <%= nav_link_right "Login", login_path %>
            <!-- <form class="form-inline pull-xs-right">
      		    <input class="form-control" type="text" placeholder="Search">
      		    <button class="btn btn-outline-success" type="submit">Login</button>
        		</form> -->
          <% end %>
        </ul>
      </div>
	</nav>

  <!-- Flash messages -->
  <% flash.each do |name, message| %>
    <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
  <% end %>

	<%= yield %>
	<footer class="footer">
		<div class="container">
			<span class="text-muted">&copy; <%= Time.now.year %> Civic Response Team</span>
      <div class="pull-xs-right">
        <form class="form-inline" action="https://tinyletter.com/ishanloya" method="post" target="popupwindow" onsubmit="window.open('https://tinyletter.com/ishanloya', 'popupwindow', 'scrollbars=yes,width=800,height=600');return true">
          <div class="form-group" style="line-height: 0;">
            <label class="sr-only" for="tlemail">Email address</label>
            <input type="email" class="form-control" id="tlemail" placeholder="Enter email">
            <input type="hidden" value="1" name="embed"/>
          </div>
          <button type="submit" class="btn btn-outline-success">Newsletter</button>
        </form>
      </div>
		</div>
	</footer>
  <%= javascript_include_tag 'https://cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js' %>
  <script type="text/javascript">
  $(document).ready(function(){
    $('.slick_center').slick({
      centerMode: true,
      // centerPadding: '60px',
      slidesToShow: 3,
      responsive: [
        {
          breakpoint: 768,
          settings: {
            arrows: false,
            centerMode: true,
            // centerPadding: '40px',
            slidesToShow: 3
          }
        },
        {
          breakpoint: 480,
          settings: {
            arrows: false,
            centerMode: true,
            // centerPadding: '40px',
            slidesToShow: 3
          }
        }
      ]
    }); 
  });
  </script>
  </body>
</html>
